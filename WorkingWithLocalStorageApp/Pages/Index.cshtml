@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1 class="fs-5">Welcome</h1>
    <form id="main" method="post">

        <div class="mb-3">
            <label for="firstName" class="form-label">First name</label>
            <input type="text" asp-for="Person.FirstName" class="form-control kpwidth" id="firstName">
        </div>

        <div class="mb-3">
            <label for="lastName" class="form-label">Last name</label>
            <input type="text" asp-for="Person.LastName" class="form-control kpwidth" id="lastName">
        </div>

        <div class="row">
            <div class="col-auto pt-2 ps-3 pb-2 ">

                <input type="submit"
                       asp-page-handler="SetLocalToLocalStorage"
                       value="Set" class="btn btn-primary "/>

            </div>

            <div class="col-auto pt-2 ps-5 pb-2 ">

                <input type="submit"
                       asp-page-handler="GetFromLocalStorage"
                       value="Get" class="btn btn-primary "/>

            </div>
        </div>
    </form>
</div>
